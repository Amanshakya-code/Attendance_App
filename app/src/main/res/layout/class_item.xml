<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/parentCardView"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/colorView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singleCardView"
            android:layout_marginBottom="5dp"
            android:elevation="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/class_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/biorhyme"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        tools:text="Class Name" />

                    <TextView
                        android:id="@+id/subject_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:textSize="16sp"
                        tools:text="Subject Name"
                        android:fontFamily="@font/aldrich"/>

                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/takeAttendance"
                    android:layout_weight="3"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="18dp"
                    android:padding="5dp"
                    android:text="Take Attendance"
                    android:textColor="#03A9F4"
                    android:textSize="15sp"
                    android:visibility="gone"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</RelativeLayout>