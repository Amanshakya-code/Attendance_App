<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/singleCardView"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="20dp"
        android:elevation="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/class_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/biorhyme"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    tools:text="Class Name" />

                <TextView
                    android:id="@+id/subject_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:textSize="16sp"
                    tools:text="Subject Name"
                    android:fontFamily="@font/aldrich"/>

            </LinearLayout>
            <TextView
                android:id="@+id/absentCountTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:background="@drawable/absent_count"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textStyle="bold"
                android:paddingBottom="2dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:visibility="gone"
                android:layout_marginTop="30dp"
                tools:text="12" />
            <TextView
                android:id="@+id/presentCountTv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:background="@drawable/present_count"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingBottom="2dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:layout_marginTop="30dp"
                tools:text="30" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/takeAttendance"
                android:layout_weight="3"
                android:layout_marginRight="10dp"
                android:layout_marginTop="18dp"
                android:padding="5dp"
                android:text="Take Attendance"
                android:textColor="#03A9F4"
                android:textSize="15sp"
                android:visibility="gone"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>