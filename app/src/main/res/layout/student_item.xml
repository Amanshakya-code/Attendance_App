<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/parentSudenCdview"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/colorStudentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_centerVertical="true"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false"
            android:id="@+id/student_cardView">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                >

                <TextView
                    android:id="@+id/student_rollnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/droid_serif"
                    android:textColor="@color/black"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    tools:text="01" />

                <TextView
                    android:id="@+id/student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="50dp"
                    android:fontFamily="@font/belgrano"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="Aman Kumar" />

                <TextView
                    android:id="@+id/student_status_present"
                    android:textAlignment="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/present_count"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="26dp"
                    android:fontFamily="@font/biorhyme"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/student_status_absent"
                    android:textAlignment="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/absent_count"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="26dp"
                    android:fontFamily="@font/biorhyme"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:visibility="gone"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


</RelativeLayout>